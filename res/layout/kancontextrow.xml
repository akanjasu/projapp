<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
        
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false" >
    
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight=".80" >
    
    <TextView
	    android:id="@+id/txtKUContEng"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="ENG Word: "
	    android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
	    android:id="@+id/txtKUContKan"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="KAN Word: "
	    android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
	    android:id="@+id/txtKUContCont"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Context: "
	    android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
	    android:id="@+id/txtKUContRegion"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Region: "
	    android:textAppearance="?android:attr/textAppearanceSmall" />
    
    
    </LinearLayout>
    
    <LinearLayout
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_weight=".20" >
    
        <Button 
            android:id="@+id/btnKUContResolve"
            android:layout_height="40dp"
		    android:layout_width="wrap_content"
		    android:layout_weight=".5"
		    android:text="Resolve"
		    android:textSize="8sp" />
	</LinearLayout>
    </LinearLayout>
		<TextView
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
			    android:text="Asked By:"
			    android:gravity="center"
			    android:textSize="10sp"
			    android:textStyle="italic" />    

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    
	    <TextView
			    android:id="@+id/txtKUCUsername"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
			    android:text="Username: "
			    android:layout_weight=".25"
			    android:gravity="left"
			    android:textSize="10sp"
			    android:textStyle="bold" />
        
        <TextView
			    android:id="@+id/txtKUCXP"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
			    android:text="XP:"
			    android:layout_weight=".25"
			    android:gravity="left"
			    android:textSize="10sp" />
        
        <TextView
			    android:id="@+id/txtKUCQUp"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
			    android:text="Q Up:"
			    android:layout_weight=".25"
			    android:gravity="left"
			    android:textSize="10sp" />
        
        <TextView
			    android:id="@+id/txtKUCAUp"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
			    android:text="A Up:"
			    android:layout_weight=".25"
			    android:gravity="left"
			    android:textSize="10sp" />
        
	</LinearLayout>

</LinearLayout>