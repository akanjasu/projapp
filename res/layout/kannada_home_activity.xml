<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
     android:background="#D6D2D4" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow011"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView21"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help..."
                android:gravity="center"
                  android:textColor="#555555"
                android:textAppearance="?android:attr/textAppearanceMedium" />        
        </TableRow>
            
        <TableRow
            android:id="@+id/tableRow19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnResPhrase"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Translate Kannada Phrases"
                android:textSize="10sp" />
            
                        
        </TableRow>

        <TableRow
            android:id="@+id/tableRow21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <Button
                android:id="@+id/btnResWord"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contextify Kannada"
                android:textSize="12sp" />
            
            
            <Button
                android:id="@+id/btnAnsQuestion"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Answer a Question"
                android:textSize="12sp" />
            
            
            
        </TableRow>
		<TableRow
            android:id="@+id/tableRow021"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnEval"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Evaluate Contributions..."
                android:textSize="14sp" />
            
        </TableRow>
        
        
        
         <TableRow
            android:id="@+id/tableRow02w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5wq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kannada Forum..."
                android:gravity="center"
                 android:textColor="#555555"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
            
        <TableRow
            android:id="@+id/tableRow3m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnKanQuestion"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ask a Question"
                android:textSize="12sp" />
            
            
            <Button
                android:id="@+id/btnkanForum"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Go to Forum"
                android:textSize="12sp" />
        </TableRow>

        
    </TableLayout>
    
</RelativeLayout>